int steps(int a[],vector<int>&v,int i,int k)
{
 
  if(i==v.size()-1)
  {
    return 0;
  }
  if(v[i]!=-1)
  {
    return v[i];
  }
  int on=INT_MAX;
  
  for(int j=1;j<=k&&j+i<v.size();j++)
  {
    on=min(on,steps(a,v,j+i,k)+abs(a[i+j]-a[i]));
  }
  
return v[i]=on;
}
int main()
{
 
    fast
  int n,k;
  cin>>n>>k;
  int a[n];
  forloop
  cin>>a[i];
  vector<int>v(n,-1);
  cout<<steps(a,v,0,k)<<"\n";
   
   return 0;
}
